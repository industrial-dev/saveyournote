{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "format",
      "group": "pre-commit",
      "command": "dotnet",
      "args": ["csharpier", "format", "."],
      "include": ["**/*.cs"]
    },
    {
      "name": "restore",
      "group": "pre-commit",
      "command": "dotnet",
      "args": ["restore"],
      "include": ["**/*.csproj"]
    },
    {
      "name": "build",
      "group": "pre-commit",
      "command": "dotnet",
      "args": ["build", "--no-restore"],
      "include": ["**/*.cs", "**/*.csproj"]
    }
  ]
}
