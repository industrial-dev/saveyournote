# Auto detect text files and perform LF normalization
* text=auto

# C# files
*.cs text diff=csharp eol=lf

# JSON files
*.json text eol=lf
*.csproj text eol=lf
*.slnx text eol=lf
*.sln text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# PowerShell scripts
*.ps1 text eol=crlf
*.psm1 text eol=crlf

# JavaScript/Node
*.js text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
package.json text eol=lf
package-lock.json text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# Config files
*.config text eol=lf
*.conf text eol=lf
Caddyfile text eol=lf
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.dll binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
